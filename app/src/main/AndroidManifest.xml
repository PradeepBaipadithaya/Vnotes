<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vnotesvtu.vnotes">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VNotes">
        <activity
            android:name="com.vnotesvtu.vnotes.no_notes"
            android:exported="false" />
        <activity
            android:name="com.vnotesvtu.vnotes.no_internet"
            android:exported="false" />
        <activity
            android:name="com.vnotesvtu.vnotes.second_page"
            android:exported="false"
            android:parentActivityName="com.vnotesvtu.vnotes.MainActivity" />
        <activity
            android:name="com.vnotesvtu.vnotes.third_page"
            android:exported="false"
            android:parentActivityName="com.vnotesvtu.vnotes.second_page" />
        <activity
            android:name="com.vnotesvtu.vnotes.fourth_page"
            android:exported="false"
            android:parentActivityName="com.vnotesvtu.vnotes.third_page"/>

        <activity
            android:name="com.vnotesvtu.vnotes.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>